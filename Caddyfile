# Dynamic domain from DOMAIN environment variable
# Set DOMAIN=your.domain.com in .env or docker-compose
{$DOMAIN:localhost} {
    # API routes - must come first for proper matching
    # Rate limiting is handled by SlowAPI in the backend (100 req/min per IP)
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Frontend - SPA routing (nginx production server)
    handle {
        reverse_proxy frontend:80
    }

    # Enable compression
    encode gzip

    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
        # Additional security headers
        X-XSS-Protection "1; mode=block"
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        # Content Security Policy - protects against XSS attacks
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://maps.googleapis.com https://www.gstatic.com https://translate.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: blob: https: http:; connect-src 'self' https://maps.googleapis.com https://translate.googleapis.com https://api.open-meteo.com https://archive-api.open-meteo.com https://*.auth0.com wss:; frame-src 'self' https://www.google.com https://*.auth0.com; object-src 'none'; base-uri 'self';"
    }
}
